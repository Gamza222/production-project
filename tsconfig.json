      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest",
    "./config/build",
    "webpack.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/**/*",
    "./json-server/**/*"
, "src/enitities/Counter/model/selectors/getCounter"  ],
}
